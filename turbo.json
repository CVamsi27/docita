{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["NODE_ENV"],
  "globalDependencies": ["API_URL", "APP_URL", "CI"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**"],
      "env": ["NODE_ENV", "API_URL", "APP_URL", "CI"]
    },
    "db:generate": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"],
      "env": ["API_URL", "APP_URL", "CI"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"],
      "env": ["API_URL", "APP_URL", "CI"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
