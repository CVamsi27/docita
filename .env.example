# Database
DATABASE_URL="postgresql://user:password@localhost:5432/docita"

# Next.js
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3001/api"

# Razorpay Payment Gateway
RAZORPAY_KEY_ID="rzp_test_xxxxxxxxxxxxx"
RAZORPAY_KEY_SECRET="your_razorpay_secret_key"
RAZORPAY_WEBHOOK_SECRET="your_webhook_secret"
PAYMENT_LINK_TTL_MINUTES="1440" # 24 hours

# Twilio WhatsApp
TWILIO_ACCOUNT_SID="ACxxxxxxxxxxxxxxxxxxxxx"
TWILIO_AUTH_TOKEN="your_twilio_auth_token"
TWILIO_WHATSAPP_NUMBER="whatsapp:+14155238886" # Twilio sandbox or your number

# Socket.IO for Real-time Updates
NEXT_PUBLIC_SOCKET_URL="http://localhost:3001"
SOCKET_SECRET="your_socket_secret_key_change_in_production"

# App Settings
NODE_ENV="development"
PORT="3001"

# ============================================================================
# AI Integration (OpenAI - New Features Phase 1)
# ============================================================================
OPENAI_API_KEY="sk-..." # Get from https://platform.openai.com/api-keys
OPENAI_MODEL="gpt-4-turbo" # Options: gpt-4-turbo, gpt-3.5-turbo
AI_REQUEST_TIMEOUT="5000" # Milliseconds before AI request times out
AI_CACHE_ENABLED="true" # Cache AI analysis results
AI_CACHE_TTL="86400" # Cache time-to-live in seconds (24 hours)

# ============================================================================
# Audit Logging Configuration (New Features Phase 1)
# ============================================================================
AUDIT_LOG_ENABLED="true" # Enable/disable audit logging feature flag
AUDIT_LOG_RETENTION_DAYS="90" # Days before archiving old audit logs

# ============================================================================
# Payment Retry Configuration (New Features Phase 1)
# ============================================================================
PAYMENT_RETRY_ENABLED="true" # Enable/disable automatic payment retries
PAYMENT_RETRY_MAX_ATTEMPTS="3" # Maximum number of retry attempts
PAYMENT_RETRY_BACKOFF_MULTIPLIER="24" # Hours between retries (1h, 24h, 72h)
PAYMENT_RETRY_CHECK_INTERVAL="1800" # Seconds to wait between retry checks (30 min)

# ============================================================================
# Bulk Import Configuration (New Features Phase 1)
# ============================================================================
BULK_IMPORT_ENABLED="true" # Enable/disable bulk import feature
BULK_IMPORT_MAX_ROWS="100000" # Maximum rows per import job
BULK_IMPORT_MAX_FILE_SIZE="52428800" # Maximum file size in bytes (50MB)
BULK_IMPORT_RATE_LIMIT_INTERVAL="300" # Seconds between imports per clinic (5 min)

# ============================================================================
# Analytics Configuration (New Features Phase 1)
# ============================================================================
ANALYTICS_CACHE_TTL="300" # Cache time-to-live for analytics queries (5 min)
ANALYTICS_SNAPSHOT_TIME="02:00" # UTC time to run daily pre-calculated metrics
ANALYTICS_ENABLED="true" # Enable/disable analytics features

